<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.NewEventActivity"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <dds.frba.utn.quemepongo.View.CustomComponents.AppText
            android:id="@+id/NewEventName"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:hint="Nombre"
            app:editable="true"

            />

        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/NewEventFormality"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/CrearPrendaColoresLayout"
            app:smsp_arrowColor="@color/colorPrimaryDark"
            app:smsp_floatingLabelColor="@color/colorAccent"
            app:smsp_errorTextColor="@color/error_color"
            app:smsp_hint="Formalidad"
            app:smsp_hintSize="14sp"
            app:smsp_multilineError="false"
            android:spinnerMode="dropdown"
            app:smsp_isReSelectable="true"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/LocationEditTextLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:hint="UbicaciÃ³n">
            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/NewEventLocation"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:lines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/NewEventFrecuency"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/CrearPrendaColoresLayout"
            app:smsp_arrowColor="@color/colorPrimaryDark"
            app:smsp_floatingLabelColor="@color/colorAccent"
            app:smsp_errorTextColor="@color/error_color"
            app:smsp_hint="Frecuencia"
            app:smsp_hintSize="14sp"
            app:smsp_multilineError="false"
            android:spinnerMode="dropdown"
            app:smsp_isReSelectable="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:weightSum="2"
            >

            <dds.frba.utn.quemepongo.View.CustomComponents.AppText
                android:id="@+id/NewEventSince"

                android:layout_width="0dp"
                android:layout_height="72dp"
                app:leftSrc="@drawable/ic_date_range_black_24dp"
                app:leftSrcTint="@color/colorPrimary"
                android:layout_weight="1"
                app:hint="Desde"
                android:layout_marginRight="15dp"
                app:editable="false"
                app:showDivider="true"
                />

            <dds.frba.utn.quemepongo.View.CustomComponents.AppText
                android:id="@+id/NewEventUntil"

                android:layout_width="0dp"
                android:layout_height="72dp"
                app:leftSrc="@drawable/ic_date_range_black_24dp"
                app:leftSrcTint="@color/colorPrimary"
                android:layout_weight="1"
                app:hint="Hasta"
                android:layout_marginLeft="15dp"
                app:editable="false"
                app:showDivider="true"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/LoginPasswordContainer"
            >
            <com.dd.processbutton.iml.ActionProcessButton
                android:id="@+id/NewEventSendButton"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="Crear evento"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:pb_colorComplete="@color/colorPrimarylight"
                app:pb_colorError="@color/error_color"
                app:pb_colorNormal="@color/colorAccent"
                app:pb_colorPressed="@color/colorAccentLight"
                app:pb_textError="@string/error"
                app:pb_textProgress="@string/loading"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>