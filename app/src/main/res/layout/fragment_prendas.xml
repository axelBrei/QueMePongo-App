<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragments.PrendasFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PrendasFragmentContainer"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PrendasFragmentRecyclerView"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/MainActivityTienePrendas"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:visibility="invisible"
            android:text="@string/notPrendasAviable"
            app:layout_constraintTop_toTopOf="@id/PrendasFragmentRecyclerView"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/PrendasFragmentFloatinActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_add_black"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>