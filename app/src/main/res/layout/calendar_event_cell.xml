<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/CalendarCellContainer"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/calendarEventCellIcon"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_event_available_black_24dp"
        android:tint="@color/colorPrimarylight"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/calendareventCellName"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/calendarEventCellIcon"
        app:layout_constraintRight_toLeftOf="@id/calendarEventCellTime"
        android:paddingHorizontal="10dp"
        android:textSize="16sp"
        app:minTextSize="14sp"
        android:textColor="@color/colorSecondaryText"
        android:textAlignment="textStart"
        />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/calendarEventCellTime"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:textSize="22sp"
        app:minTextSize="22sp"
        android:textColor="@color/colorSecondaryText"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>