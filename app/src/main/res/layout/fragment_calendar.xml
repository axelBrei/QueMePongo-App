<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".View.Fragments.CalendarFragment"
    android:background="@color/backgroundColor">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/CalendarFragmentCalendar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:eventsEnabled="true"
        app:type="one_day_picker"
        app:headerColor="@color/colorPrimaryDark"
        app:todayLabelColor="@color/colorPrimaryDark"
        app:selectionColor="@color/colorPrimaryDark"
        app:selectionLabelColor="@color/white"
        app:highlightedDaysLabelsColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </com.applandeo.materialcalendarview.CalendarView>



        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:id="@+id/CalendarFragmentEventCollapsable"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            app:ael_duration="100"
            app:ael_expanded="false"
            app:ael_orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/white"
            >

            <RelativeLayout
                android:id="@+id/CalendarFragmentEventCollapsableHeader"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/calendar_event_list_header"
                >

                <ImageView
                    android:id="@+id/CalendarFragmentEventCollapsableHeaderIcon"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_less_black_24dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/CalendarFragmentEventsList"

                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:minHeight="500dp">

            </androidx.recyclerview.widget.RecyclerView>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>